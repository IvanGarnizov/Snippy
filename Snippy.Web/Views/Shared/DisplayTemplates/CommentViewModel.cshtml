@using  Snippy.Web.Models.ViewModels
@model CommentViewModel

<div class="comment">
    <div>@Model.Content</div>
    <div>
        <span class="glyphicon glyphicon-user"></span>
        <span id="author-name">@Model.Author</span> on @Model.CreationTime.ToString("dd.MM.yyyy HH:mm:ss")</div>
    <div>on snippet @Html.ActionLink(Model.SnippetTitle, "Details", "Snippets", new { id = Model.SnippetId }, null)</div>
</div>