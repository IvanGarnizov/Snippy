@using Snippy.Web.Models
@model SnippetBindingModel

<h1>Edit snippet "@this.ViewBag.Title"</h1>

@using (Html.BeginForm("Edit", "Snippets", new { id = this.ViewBag.Id }, FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Title, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "edited-Title" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 5, placeholder = "edited-Some description about the snippet" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Code, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Code, new
       {
           @class = "form-control",
           rows = 5,
           placeholder =
     @"edited-using System;

class Program
{
    static void Main()
    {
    }
}"
       })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Language, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.Language, this.ViewBag.Languages as IEnumerable<SelectListItem>, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Labels, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Labels, new { @class = "form-control", placeholder = "new;label;removed-some-labels;nonexisting-label" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-success" value="Edit" />
            @Html.ActionLink("Cancel", "Details", "Snippets", new { id = this.ViewBag.Id }, new { @class = "btn btn-default" })
        </div>
    </div>
}