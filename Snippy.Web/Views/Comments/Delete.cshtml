@using Snippy.Web.Models.ViewModels
@model CommentViewModel

<h1>Delete comment</h1>
<div>Are you sure you want to delete this comment?</div>

@Html.DisplayFor(m => m)
@Html.ActionLink("Delete", "DeleteComment", "Comments", new { id = this.ViewBag.Id, snippetId = Model.SnippetId }, new { @class = "btn btn-danger" })
@Html.ActionLink("Cancel", "Details", "Snippets", new { id = Model.SnippetId }, new { @class = "btn btn-default" })